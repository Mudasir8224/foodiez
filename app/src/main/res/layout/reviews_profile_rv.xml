<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layoutimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewReviewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/cafe">

            </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameProfileReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mavenpro_semibold"
                android:text="Name Profile"
                android:textColor="@color/Black"
                android:textSize="14sp">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/mavenpro_medium"
                    android:text="45 Reviews,210 Followers">

                </TextView>


                <Button
                     android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:text="Follow"
                    android:textSize="5sp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/follow_button">

                </Button>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_star">

        </ImageView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_star">

        </ImageView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_star">

        </ImageView>


        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_starempty">

        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textViewNameiteregory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mavenpro_bold"
            android:text="4.0"
            android:layout_marginLeft="4sp"
            android:textColor="@color/yellowColor"
            android:textSize="12sp">

        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/comment"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_comment">

            </ImageView>


            <ImageView
                android:layout_toLeftOf="@id/comment"
                android:layout_marginRight="18dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_like">

            </ImageView>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We had lunch here a few times while on the island visiting family and friends. The servers here are just wonderful and have great memories it seems. We sat on the ocean front patio and enjoyed the view with our delicious wine and lunch."
            android:fontFamily="@font/mavenpro_regular">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewLineDraw"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/LightWhite" />

    </LinearLayout>



</LinearLayout>